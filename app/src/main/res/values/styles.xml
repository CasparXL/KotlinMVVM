<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 关闭 RecyclerView ScrollView ViewPager 水波纹效果 -->
        <item name="android:overScrollMode">never</item>
    </style>
    <!--启动页过渡图-->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!--设置启动画面背景、动画图标和动画持续时间-->
        <item name="windowSplashScreenBackground">@color/white50</item>
        <!--使用windowSplashScreenAnimatedIcon来添加一个可绘制图标或一个动画绘制的。其中一个是必须的。-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_icon</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!--使用windowSplashScreenAnimatedIcon来添加一个可绘制图标或一个动画绘制的。其中一个是必须的。-->
        <item name="postSplashScreenTheme">@style/AppTheme</item>  # Required.
        <!--适配Android P刘海屏-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>

    <!--<style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
